[settings]
arch=x86_64
build_type=Release
compiler=msvc
compiler.cppstd=20
compiler.runtime=static
compiler.version=193
os=Windows

# These are problematic to compile in Debug
# But luckely they are pure C libs and we can work with them
# given that they are built in Relase mode without troubles
# even if the rest of app is using Debug mode.
libiconv/*:build_type=Release
m4/*:build_type=Release
libx264/*:build_type=Release
ffmpeg/*:build_type=Release

[conf]
tools.build:cxxflags=["/arch:AVX2"]
tools.build:cflags=["/arch:AVX2"]
tools.info.package_id:confs=["tools.build:cxxflags", "tools.build:cflags"]
